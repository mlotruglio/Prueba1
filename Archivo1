#include <stdio.h>

int main() {
    int n,suma=0;
    printf("Introduzca un numero entero (-1=FIN): ");
    scanf("%d",&n);
    while(n!=-1){
        suma=suma+n;
        //printf("Introduzca un numero entero (-1=FIN): ");
        scanf("%d",&n);
    }
    printf("La suma vale %d\n",suma);
    return 0;
}
//Segunda version
